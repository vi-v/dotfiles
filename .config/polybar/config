;primary = #444444
;secondary = #444444
alert = #bd2c40

background = #5F263238
background-alt = #2196F3
;foreground = ${xrdb:color2}
;foreground-alt = ${xrdb:color3}
primary = ${#2196F3}
secondary = ${#E91E63}
white = ${#EEEEEE}
black = ${#222222}
;alert = #bd2c40

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/bar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
offset-x = 0
offset-y = 0

tray-position = right 
tray-padding = 2
tray-detached = false
#tray-transparent = true
